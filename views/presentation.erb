<!DOCTYPE html>
<html>
  <head>
    <title><%= h presentation.title %></title>
    <%= has_js  "jquery-1.3.2", "jquery.easing", "jquery.hash-changed", "slides" %>
    <%= has_css "slidedown-base", "presentation" %>
  </head>
  <body>
    <div id="header">
    </div>
    <div id="footer">
      <p id="presentation-name"><%=h presentation.title %> - <span id="slide-progress"><span id="current-slide">1</span> of <span id="slide-count">1</span></span></p>
      <p id="presentation-authors"><%=h presentation.author %></p>
      <div class="clear"></div>
    </div>
    <div id="slides">
      <div id="track">
        <%= @slides %>
      </div>
    </div>
  </body>
</html>
